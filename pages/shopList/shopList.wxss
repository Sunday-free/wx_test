page{
	background-color: #fff;
}
.shop{
	padding: 20rpx;
	border-bottom: 1rpx solid #ddd;
	display: flex;
	position: relative;
}
.shop-img{
	width: 160rpx;
	height: 160rpx;
	margin-right: 20rpx;
	color: #666;
}
.shop-info{
	width: 520rpx;
	height: 160rpx;
	display: flex;
	flex-direction: column;
	font-size: 10px;
	line-height: 1.5;
    color: #666;
}
.shop-title{
	font-size: 16px;
	color: black;
    width: 370rpx;
}
.shop-star{
	position: absolute;
	right: 20rpx;
	top: 20rpx;
	color: #e2e2e2;
}
