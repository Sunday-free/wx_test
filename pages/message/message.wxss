page{
    background-color: #f1f1f1;
}
.card{
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    /* 多个view之间的 外边距合并  */
    margin: 60rpx 20rpx;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: column;
}
.card-title{
    font-size: 20px;
    margin-bottom: 20rpx;
}
.card-date{
    font-size: 14px;
    color: #ccc;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}
.card-img{
    width: 100%;
    height: 200rpx;
}
.card-desc{
    font-size: 16px;
    color:#333;
    border-bottom: 1rpx solid #ddd;
    padding-bottom: 20rpx;
    margin: 20rpx 0;
}
.card-read{
    font-size: 14px;
    color: #666;
}
