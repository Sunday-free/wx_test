/* 模块1 轮播图 */
.slider,.slider image ,.slider swiper{
  width: 100%;
  height: 390rpx;
}
.index-nav {
  /* 父盒子设置伸缩盒 */
  display: flex;
  /* 设置元素 换行显示 */
  flex-wrap: wrap;
}
/* --------------------------- */

/* 模块2 首页导航 */
.index-nav .nav-item{
  /* 每个小item 占据 33.33% */
  width: 33.33%;
  height: 200rpx;
  border-bottom:1rpx solid #ccc;
  /* 给父盒子 设置伸缩盒子 */
  display: flex;
  /* 垂直排列 */
  flex-direction: column;
  /* 主轴居中显示 */
  justify-content: center;
  /* 侧轴 居中  */
  align-items: center;
  /* border-box 盒子模型 */
  box-sizing: border-box;
  /* 微信小程序 文字是用 px 其他布局的 rpx */
  font-size: 14px;
}
.index-nav .nav-item:nth-child(3n)::after{
    width: 0;
}
/*  设置图片的宽高 */
.index-nav image{
  width: 102rpx;
  height: 102rpx;
}
/* ---------------------------------------- */

/* 模块3 首页入口 */
.index-enter {
  display: flex;
  padding:20rpx 30rpx;
}
.index-enter .enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter image{
  width: 320rpx;
  height: 178rpx;
}
